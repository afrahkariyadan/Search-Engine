<h1>Listing roles</h1>

<table border=1>
  <tr>
    <th>Name</th>
    <th>Action</th>
    
  </tr>

<% @roles.each do |role| %>
  <tr>
   <td><%= role.name%></td>
    <td><%= link_to 'Show', role %>
    <%= link_to 'Edit', edit_role_path(role) %>
    <%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Role', new_role_path %>
